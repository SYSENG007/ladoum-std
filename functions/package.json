{
    "name": "ladoum-std-functions",
    "version": "1.0.0",
    "description": "Cloud Functions for Ladoum STD - Sheep Farm Management",
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
