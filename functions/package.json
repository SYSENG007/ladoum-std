    "engines": {
        "node": "18"
    },
    "dependencies": {
        "firebase-admin": "^12.7.0",
        "firebase-functions": "^5.1.1",
        "resend": "^6.6.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "typescript": "^5.0.0"
    },
    "private": true,
    "directories": {
        "lib": "lib"
    },
